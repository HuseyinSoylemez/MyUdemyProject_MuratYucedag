@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Personel Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Sosyal Medya 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <br />
    <label>Sosyal Medya 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />
    <label>Sosyal Medya 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Resim</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />

    
        @Html.LabelFor(model => model.Durum, new { @class = "" })
                                       
            @Html.DropDownListFor(c => c.Durum, new SelectList(
                                                new[]
                                                {
                                                    new { Value = "true", Text = "Aktif" },
                                                    new { Value = "false", Text = "Pasif" },
                                                },
                                                "Value",
                                                "Text",
                                                1
                                                ), new { @class = "form-control", name = "select" })
            @Html.ValidationMessageFor(model => model.Durum, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-outline-success">Personeli Güncelle</button>
</form>

